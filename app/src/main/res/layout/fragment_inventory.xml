<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.InventoryFragment">

    <SearchView
        android:id="@+id/search_bar_inventory"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="39dp"
        app:iconifiedByDefault="false"
        app:queryHint="Search Name">

    </SearchView>

    <ListView
        android:id="@+id/mainlistinventory_listv"
        android:layout_width="match_parent"
        android:layout_height="652dp"
        android:layout_marginTop="80dp">


    </ListView>

    <ImageButton
        android:id="@+id/btn_Add_ing"
        android:layout_width="95dp"
        android:layout_height="34dp"
        android:background="#fff"
        android:src="@drawable/ic_plus"
        tools:layout_editor_absoluteX="159dp"
        tools:layout_editor_absoluteY="528dp" />

    <ImageButton
        android:id="@+id/btn_list_shopping"
        android:layout_width="130dp"
        android:layout_height="38dp"
        android:background="#fff"
        android:src="@drawable/edit_shop"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="19dp" />


</RelativeLayout>