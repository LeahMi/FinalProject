<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.CategoryDetailsFragment">

    <SearchView
        android:id="@+id/search_bar_category"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_below="@+id/btn_add_rec"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="6dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="6dp"
        android:background="#33c5c9cc"
        android:iconifiedByDefault="false"
        android:layoutDirection="rtl"
        android:queryHint="חיפוש חופשי"
        app:iconifiedByDefault="true">

    </SearchView>

    <!--    <ListView-->
    <!--        android:id="@+id/list_view"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="652dp"-->
    <!--        android:layout_marginTop="80dp">-->

    <!--    </ListView>-->

    <TextView
        android:id="@+id/name_category_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="33dp"
        android:fontFamily="@font/chango"
        android:text=" שם קטגוריה "
        android:textAlignment="center"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btn_add_rec"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-3dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="64dp"
        android:background="#fff"
        android:src="@android:drawable/ic_input_add" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_recipes"
        android:layout_width="match_parent"
        android:layout_height="651dp"
        android:layout_marginTop="94dp" />


</RelativeLayout>