<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListRecipesFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/title_recipe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="92dp"
        android:text="@string/allRecipes"
        android:clickable="false"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageButton
        android:id="@+id/btn_add"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="64dp"
        android:background="#fff"
        android:src="@drawable/ic_plus" />
    <LinearLayout
        android:id="@+id/l_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_add"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <SearchView
            android:id="@+id/search_bar"
            android:layout_width="335dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:background="#33c5c9cc"
            android:iconifiedByDefault="false"
            android:layoutDirection="rtl"
            android:queryHint="חיפוש חופשי"
            app:iconifiedByDefault="true">

        </SearchView>
        <Space
            android:layout_width="10dp"
            android:layout_height="match_parent">
        </Space>
        <ImageButton
            android:id="@+id/sort_btn1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="0.1"
            android:background="#00FFFFFF"
            android:src="@drawable/ic_filter" />
    </LinearLayout>


    <ListView
        android:id="@+id/mainlistfragment_listv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/l_search"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp">

    </ListView>







</RelativeLayout>